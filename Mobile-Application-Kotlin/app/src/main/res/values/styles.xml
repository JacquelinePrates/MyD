<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.FullScreen" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="styleEdditTextLogin">
        <item name="android:bottom">1dp</item>
        <item name="colorControlNormal">#C0C0C0</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textColorHint">#D5D0D0</item>
    </style>

</resources>
