<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202136"
    tools:context=".fragments.fragmentPerfil">

    <TextView
        android:id="@+id/divTitulo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:src="@drawable/ic_person_white_24dp"
        app:layout_constraintBottom_toTopOf="@+id/divLinhaVerde"
        app:layout_constraintEnd_toStartOf="@+id/tvtituloPerfil"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/divTitulo"
        app:layout_constraintVertical_bias="0.571" />

    <TextView
        android:id="@+id/tvtituloPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Perfil"
        android:textColor="#202136"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/divLinhaVerde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divTitulo" />

    <TextView
        android:id="@+id/divLinhaVerde"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#4DEE78"
        app:layout_constraintTop_toBottomOf="@id/divTitulo" />

    <ImageView
        android:id="@+id/ivPerfil"
        android:layout_width="197dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_account_circle_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divLinhaVerde" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="293dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="EMAIL"
        android:textColor="#FFF"
        style="@style/StyledTilEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPerfil" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="293dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        style="@style/StyledTilEditText"
        android:gravity="center"
        android:text="NOME"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText5" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="293dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="CPF"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:layout_width="293dp"
        android:layout_height="1dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/editText3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        android:background="#e6ffffff"/>

    <EditText
        android:id="@+id/editText3"
        style="@style/StyledTilEditText"
        android:layout_width="293dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:inputType="textPassword"
        android:text="senha"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="293dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        style="@style/StyledTilEditText"
        android:gravity="center"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Atualizar dados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:backgroundTint="#2AABC4"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        android:onClick="mandaPerfil"/>

</androidx.constraintlayout.widget.ConstraintLayout>